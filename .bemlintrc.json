{
  "elementDivider": "__",
  "modifierDivider": "--",
  "ignore": [
    "node_modules",
    "dist"
  ],
  "rules": {
    "one-block": true,
    "one-element": true,
    "element-inside-parent-block": true,
    "no-double-element": true,
    "no-neighbour-parent-block": true,
    "modifiable-class": true
  }
}
